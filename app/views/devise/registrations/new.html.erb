<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

<div class="row">
  <div class="small-10 large-5 columns" id="required">
    <h3> Required </h3>
    <div class="field">
      <%= f.label :first_name %><br />
      <%= f.text_field :first_name, required: true %>
    </div>

    <div class="field">
      <%= f.label :last_name %><br />
      <%= f.text_field :last_name, required: true %>
    </div>

    <div class="field">
      <%= f.label :occupation_title %><br />
      <%= f.text_field :occupation_title, required: true %>
    </div>

    <div class="field">
      <%= f.label :office_address %><br />
      <%= f.text_field :office_address, required: true %>
    </div>

    <div class="field">
      <%= f.label :office_city %><br />
      <%= f.text_field :office_city, required: true %>
    </div>

    <div class="field">
      <%= f.label :office_state %><br />
      <%= f.text_field :office_state, required: true %>
    </div>

    <div class="field">
      <%= f.label :office_zip %><br />
      <%= f.text_field :office_zip, required: true %>
    </div>

    <div class="field">
      <%= f.label :phone %><br />
      <%= f.text_field :phone %>
    </div>

    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email %>
    </div>

    <div class="field">
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "off" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off" %>
    </div>

    <div class="actions">
      <%= f.submit "Sign up" %>
    </div>
  </div>

  <div class="small-12 large-5 columns" id="optional">
    <h3> Optional </h3>
    <div class="field">
      <%= f.label 'Private practice address' %><br />
      <%= f.text_field :practice_address %>
    </div>

    <div class="field">
      <%= f.label 'Private practice city' %><br />
      <%= f.text_field :practice_city %>
    </div>

    <div class="field">
      <%= f.label 'Private practice state' %><br />
      <%= f.text_field :practice_state %>
    </div>

    <div class="field">
      <%= f.label 'Private practice zip' %><br />
      <%= f.text_field :practice_zip %>
    </div>

    <div class="field">
      <%= f.label 'Physician Assistant' %><br />
      <%= f.text_field :physicians_assistant %>
    </div>


    <div class="field">
      <%= f.label :cellphone %><br />
      <%= f.text_field :cellphone %>
    </div>
  </div>
</div>

<% end %>

<%= render "devise/shared/links" %>
