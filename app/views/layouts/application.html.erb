<!DOCTYPE html>
<html>
  <head>
    <title>SurgeryApp</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>

    <div class="contain-to-grid" id="navbar">
      <nav class="top-bar">
        <div class="top-bar-left">
          <h4>User</h4>
          <ul>
            <% if user_signed_in? %>
              <li><p><%= link_to 'Sign Out', destroy_user_session_path, method: :delete %> | <%= link_to 'My User Profile', edit_user_registration_path %></p></li>
            <% else %>
              <li><p><%= link_to 'Sign Up', new_user_registration_path %> | <%= link_to 'Login', new_user_session_path %></p></li>
            <% end %>
          </ul>
        </div>

        <div class="top-bar-right">
          <h4>Physician</h4>
          <ul>
            <% if physician_signed_in? %>
              <li><p><%= link_to 'Sign Out', destroy_physician_session_path, method: :delete %> | <%= link_to 'My Physician Profile', edit_physician_registration_path %></p></li>
            <% else %>
              <li><p><%= link_to 'Sign Up', new_physician_registration_path %> | <%= link_to 'Login', new_physician_session_path %></p></li>
            <% end %>
          </ul>
        </div>
      </nav>
    </div>

    <%= yield %>

    <p><%= link_to 'HOME', root_path %></p>
  </body>
</html>
